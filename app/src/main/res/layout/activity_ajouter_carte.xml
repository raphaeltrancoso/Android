<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ajouter_carte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.trancoso.projet.AjouterCarteActivity">

    <Button
        android:text="Afficher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/afficher"
        android:onClick="afficher"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ajouter"
        android:layout_alignStart="@+id/ajouter"
        android:layout_marginBottom="57dp" />

    <Button
        android:text="Ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ajouter"
        android:onClick="ajouter"
        android:layout_above="@+id/afficher"
        android:layout_alignLeft="@+id/reponse"
        android:layout_alignStart="@+id/reponse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/reponse"
        android:hint="entrer la reponse"
        android:layout_above="@+id/ajouter"
        android:layout_marginBottom="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/question"
        android:hint="entrer la question"
        android:layout_above="@+id/reponse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:text="CARTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_above="@+id/question"
        android:layout_alignLeft="@+id/question"
        android:layout_alignStart="@+id/question" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp" />

    <TextView
        android:text="selectionner le theme du jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

</RelativeLayout>
